<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppBancaMovil" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AppBancaMovil" parent="Base.Theme.AppBancaMovil" />

    <!-- FloatingInputLayout-->
    <style name="floatingInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hintGray</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textRegular">
        <item name="android:fontFamily">@font/primary_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textBold">
        <item name="android:fontFamily">@font/primary_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textSemi">
        <item name="android:fontFamily">@font/primary_semi</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Toolbar_Theme">
        <item name="colorControlNormal">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/beige</item>
        <item name="android:fontFamily">@font/primary_regular</item>
    </style>
    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/primary_semi</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>